<div id="game_{{game.id}}" class="game">
    <div class="game-header">
        <span class="game-title">Game {{game.number}}</span>
        <span class="edit-game"><a href="{{ path('getGameInfo', {'id':game.id}) }}" gameId="{{game.id}}" sessionId="{{game.session.id}}">Edit</a></span>
    </div>
    <div class="game-details">
        <div class="game-details-wrapper">
            <div id="frame_edit_{{game.id}}" class="frame-edit">
                <div class="frame-editor">
                    <table>
                        <tr>
                            <td style="border-left-width: 0px;"><a href="#" id="swap_mode">Mode</a></td>
                            <td>Frame 1:</td>
                            <td style="padding:0px;width:19px;">
                                <span class="show-for-pins" style="display:none;">&nbsp;</span>
                                <span class="show-for-score"><input type="text" style="width: 15px; height: 14px;"/></span>
                            </td>
                            <td style="padding:0px;width:19px;">
                                <span class="show-for-pins" style="display:none;">&nbsp;</span>
                                <span class="show-for-score"><input type="text" style="width: 15px; height: 14px;"/></span>
                            </td>
                        </tr>
                    </table>
                    <div id="pin_editor">
                        <div class="pin-row">
                            <a href="#" class="pin-button pin-up" id="pin_7" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_8" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_9" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_10" pin="7"></a>
                        </div>
                        <div class="pin-row">
                            <a href="#" class="pin-button pin-up" id="pin_4" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_5" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_6" pin="7"></a>
                        </div>
                        <div class="pin-row">
                            <a href="#" class="pin-button pin-up" id="pin_2" pin="7"></a>
                            <a href="#" class="pin-button pin-up" id="pin_3" pin="7"></a>
                        </div>
                        <div class="pin-row">
                            <a href="#" class="pin-button pin-up" id="pin_1" pin="7"></a>
                        </div>
                    </div>
                    <div id="editor_buttons">
                        <input type="button" value="Submit"/>
                        <input type="button" value="Cancel"/>
                    </div>
                </div>
            </div>

            <table class="string-table">
                <thead class="string-header">
                    <tr>
                        <th style="text-align: left;">
                <div id="add_bowler_to_game_{{game.id}}" class="add-bowler-to-game">
                    <a href="#" gameId="{{game.id}}">Add</a>
                    <ul>
            {% for b in bowlers %}
                            <li><a href="#" bowlerId="<%=b.getId()%>" gameId="{{game.id}}">{{b.name}}</a></li>
            {% endfor %}
                        </ul>
                    </div>

                    </th>
        {% for i in range(1,10) %}
                    <th class="frame-header" id="game_{{game.id}}_frame_{{i}}">{{i}}</th>
        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
            {% for string in game.strings %}
                {% include "BBMainBundle:String:string.html.twig" with {'string' : string } %}
            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>